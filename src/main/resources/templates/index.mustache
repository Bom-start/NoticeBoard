{{>layout/header}}
<div class="col-md-12">
    <div class = "row">
        <div class="col-md-6">
            <a href="/board/save" role="button" class="btn btn-primary">글 등록</a>
        </div>
    </div>
    <br>
    <table class="table table-horizontal table-bordered">
        <thead class = "thead-strong">
        <tr>
            <th>게시글번호</th>
            <th>책 저자</th>
            <th>책 제목</th>
            <th>내용</th>
            <th>읽은 날</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#board}}
            <tr>
                <td>{{id}}</td>
                <td>{{author}}</td>
                <td><a href="/board/{{id}}">{{title}}</a></td>
                <td>{{content}}</td>
                <td>{{readDate}}</td>
            </tr>
        {{/board}}
        </tbody>
    </table>
</div>
{{>layout/footer}}